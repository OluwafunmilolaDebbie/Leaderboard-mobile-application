<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_skill"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:cardBackgroundColor="#F9F8FB"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_img_skill"
                android:layout_width="246dp"
                android:layout_height="108dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/skilliqtrimmed" />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/skiller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#101010"/>

                <TextView
                    android:id="@+id/skiller_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/skiller_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#101010"/>

                <TextView
                    android:id="@+id/skill_iq_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/skiller_name"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/skiller_result"
                    android:padding="2dp"
                    android:text="@string/skill_iq_score"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#101010"/>

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/skiller_name"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/skill_iq_score"
                    android:padding="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#101010"/>


            </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>