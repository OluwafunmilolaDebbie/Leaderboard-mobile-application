<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_learning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F9F8FB"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_img_learning"
                android:layout_width="181dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/toplearner" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/leader_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#101010"/>

                    <TextView
                        android:id="@+id/leader_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leader_name"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#101010"/>

                    <TextView
                        android:id="@+id/learning_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leader_name"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/leader_result"
                        android:padding="2dp"
                        android:text="@string/learning_hours"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#101010"/>

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leader_name"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/learning_hour"
                        android:padding="2dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#101010"/>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>